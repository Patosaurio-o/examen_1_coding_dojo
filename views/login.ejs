<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login</title>
    <script src="/js/jquery-3.5.1.min.js"></script>
    <link rel="stylesheet" href="/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/toastr.js"></script>
    <link href="/css/toastr.css" rel="stylesheet"/>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body class="fondo">
    <nav class="navbar navbar-expand navbar-dark bg-primary">
      <div class="container-fluid ">
        <a href="#" class="navbar-brand"><h2>The trivia's game!! </h2></a>
        <ul class="navbar-nav">
          <li class="nav-item"><button id="btn-login" class="btn btn-primary"><i class="fa fa-sign-in" aria-hidden="true"></i> Login</button></li>
          <li class="nav-item mx-3"><button id="btn-register" class="btn btn-primary"><i class="fa fa-id-card-o" aria-hidden="true"></i> Register</button></li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col">
          <div id="div-form">
            </br></br></br>
          </div>
        </div>
      </div>
    <script>
    toastr.options = {
      "closeButton": true,
      "progressBar": true,
    }        
    $(document).ready(function(){
      <%for(error of errors){%>
        toastr.error('<%=error%>')
      <%}%>    
    });
    $('#btn-login').on('click', function(){
      $('#div-form').html(
        `<form id="form-login" action="/login" method="POST" class="col-4 offset-md-4 mt-4">
          <h4>Ingrese a la plataforma</h4>
          <div class="row">
            <div class="mb-3 mt-3 col">
              <label class="form-label">Email</label>
              <input placeholder="name@example.com" name="email" type="email" class="form-control" required>
            </div>
          </div>
          <div class="row">
            <div class="mb-3 col">
              <label class="form-label">Contraseña</label>
              <input name="password" type="password" class="form-control " required>
            </div>
          </div>
          <div class="row">
            <div class="mb-3 col">
              <input type="submit" class="btn btn-primary">
            </div>
          </div>
        </form>`
      )
    });
    $('#btn-register').on('click', function(){
      $('#div-form').html(
        `<form id="form-register" action="/register" method="POST" class="col-4 offset-md-4  mt-4">
          <h4>Registrese en nuestra plataforma</h4>
          <div class="row">
            <div class="mb-3 mt-3 col">
              <label class="form-label" for="email">Nombre</label>
              <input placeholder="elsa capunta" name="name" type="text" class="form-control" required>
            </div>
          </div>
          <div class="row">
            <div class="mb-3 col">
              <label class="form-label" for="email">Email</label>
              <input placeholder="name@example.com" name="email" type="email" class="form-control" required>
            </div>
          </div>
          <div class="row">
            <div class="mb-3 col">
              <label class="form-label" for="email">Contraseña</label>
              <input name="password"  id="password" type="password" class="form-control" required>
            </div>
          </div>
          <div class="row">
            <div class="mb-3 col">
              <label class="form-label" for="email">Confirme Contraseña</label>
              <input name="password_confirm" id="password_confirm" type="password" class="form-control" required>
            </div>
          </div>
          <div class="row">
            <div class="mb-3 col">
              <input type="submit" class="btn btn-primary">
            </div>
          </div>
        </form>`
      )
    }); 
    </script>
  </body>
</html>